$colorGrayBlack = #000
$colorGray = #555

.codelab-list-wrapper
    background #fff
    .codelab-list-head
        width 100%
        .head-text
            max-width 1400px
            margin 0 auto
            padding 0 100px

        .welcom
            display block
            font-size 24px
            margin-top 60px
            margin-bottom 26px
            color $colorGrayBlack
        p
            font-size 16px
            line-height 24px
            color $colorGray

    .codelab-list-main
        width 100%
        .main-inner-wrapper
            max-width 1400px
            margin 0 auto
            padding 50px 100px
            overflow hidden
            a
                display inline-block
                width 32%
                margin 0 2% 30px 0
                padding 0
                box-sizing border-box
                border 1px #eee solid
                text-decoration none
                float left

                &:nth-of-type(3n)
                    margin-right 0

            .lab-item
                width 100%
                position relative
                background #fff
                text-algin center
                height 296px
                overflow hidden

                .codelab-name-wrapper
                    background #f4f4f4
                    height 95px
                .codelab-name
                    padding 20px 20px 0 20px
                    color $colorGrayBlack
                    font-size 20px
                    text-align left
                    font-weight 400
                    overflow hidden
                    white-space nowrap
                    text-overflow ellipsis
                    ellipsis()

                .codelab-release-time
                    padding 10px 0 10px 20px
                    color #999
                    text-align left
                    font-size 14px

                .codelab-desc
                    padding 20px
                    font-size 14px
                    height 96px
                    line-height 28px
                    font-weight 400
                    text-align left
                    color $colorGray
                    overflow hidden
                    // text-overflow ellipsis
                    // -o-text-overflow ellipsis
                    // display -webkit-box
                    // -webkit-box-orient vertical
                    // -webkit-line-clamp 4

                .more-detail
                    margin-left 20px
                    height 38px
                    line-height 38px
                    border solid #707379 1px
                    border-radius 18px
                    width 90px
                    text-align center
                    position absolute
                    bottom 20px
                    color #000
                    pointer cursor
                    @media screen and (min-width: 768px)
                      &:hover
                        background #f4f4f4


@media screen and (max-width: 767px)
    .codelab-list-wrapper
        .codelab-list-head
            padding-bottom 30px
            .head-text
                padding 0 25px
            .welcom
                margin-bottom 45px
            p
                margin 0

        .codelab-list-main
            width 100%
            .main-inner-wrapper
                margin 0 auto
                box-sizing border-box
                padding 25px
                a
                    display block
                    width 100%
                    margin 0 0 30px
                .lab-item
                    width 100%

